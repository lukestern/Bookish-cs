@using Bookish_cs.Controllers;
@model BookManagementViewModel
@{
    ViewData["Title"] = "Book Management Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Book Management page</p>

    @if (Model.Books.Any())
    {
        foreach (var book in Model.Books)
        {
            <p>
                <strong>Book title:</strong> <a asp-controller="Book" asp-action="@nameof(BookController.BookPage)" asp-route-id="@book.Id">@book.Title</a>
            </p>
        }
    }
</div>